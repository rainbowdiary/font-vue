// 图标样式
bg-image($name)
  @media (-webkit-device-pixel-ratio: 2)  
    background-image url($name+"@2x.png")
  @media (-webkit-device-pixel-ratio:3)
    background-image url($name+"@3x.png")
// 一物理像素边框
one-px($color)
  position relative
  &::after 
    content ""
    display block
    position absolute
    bottom 0
    height 1px
    width 100%
    background-color $color
    @media (-webkit-device-pixel-ratio: 2)  
      transform scaleY(.5)
    @media (-webkit-device-pixel-ratio:3)
      transform scaleY(.3333333333333333333333333)